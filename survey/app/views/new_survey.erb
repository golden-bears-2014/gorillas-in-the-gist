<div class="container">
  <h1>Create Survey</h1>

  <form action="/surveys" method="post" id="new-survey">
    <label class="label" for="name">Name:</label>
    <input type="text" name="name"><br>
    <!-- once users can log in, id will come from session current_user.id: -->
    <input type="hidden" name="user_id" value="1">
    <input type="submit" value="Create Survey">
  </form>
  <h2 id="title"><!-- Survey Name will append here< --></h2>


  <form action="/questions" method="post" id="new-question">
    <label class="label" for="name">Name:</label>
    <input type="text" name="question"><br>
    <input type="submit" value="Add Question">
  </form>
  <ul id="questions">
  <!-- Questions will append here as <li>s -->
      <ul id="choices">
      <!-- Choices will append here as nested <li>s -->
      </ul>
  </ul>


  <form action="/choices" method="post" id="new-choice">
    <label class="label" for="name">Choice:</label>
    <input type="text" name="choice"><br>
    <input type="submit" value="Add Choice">
  </form>


</div>